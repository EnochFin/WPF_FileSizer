<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TreeView x:Name="fileTreeView" HorizontalAlignment="Left" Height="235" Margin="32,59,0,0" VerticalAlignment="Top" Width="396">
            <TreeView.Resources>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Subdirectories}" DataType="{x:Type local:DirectoryInfo }">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Name}"/>
                        <TextBlock Margin="5 0" Text="{Binding Path=Size}"></TextBlock>
                        <TextBlock Text="bytes"></TextBlock>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
        <TextBox x:Name="textDirectory" HorizontalAlignment="Left" Height="23" Margin="32,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318"/>
        <Button x:Name="searchButton" Content="Search" HorizontalAlignment="Right" Margin="0,28,89,0" Width="75" Height="20" VerticalAlignment="Top" Click="searchButton_Click"/>

    </Grid>
</Window>
